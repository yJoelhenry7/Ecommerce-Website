            </div>
        </div>
    </div>

    <div id="prev" class="fas fa-chevron-left" onclick="prev()"></div>
    <div id="next" class="fas fa-chevron-right" onclick="next()"></div>
</section>
<!-- home section ends -->

<!-- products section starts  -->

<section class="products" id="products">

    <h1 class="heading"> latest <span>products</span> </h1>
    <div class="box-container">
      <% prod.forEach(function(prod){%>
        <div class="box">
            <div class="icons">
                <a href="#" class="fas fa-heart"></a>
            </div>
            <img src="<%=prod.product%>"alt="">
            <div class="content">
                <h3><%=prod.name%></h3>
                <div class="price">&#8377;<%=prod.cost%> <span>&#8377;<%=prod.realcost%></span></div>
                <form  action="/addcart" method="GET">
                    <input type="hidden" class="id-num" name="name" value=" <%= prod.name%> " readonly>
                    <input type="hidden" class="id-num" name="img" value=" <%= prod.product%> " readonly>
                    <input type="hidden" class="id-num" name="cost" value=" <%= prod.cost%> " readonly>
                    <input type="hidden" class="id-num" name="product" value=" <%= prod.id%> " readonly>
                    <input type="hidden" class="id-num" name="quantity" value="<%= prod.quantity%>" readonly>
                    <input type="submit" class="btn" value="add to cart">
                </form>
            </div>
        </div>
        <%})%>
    </div> 
</section>

<!-- products section ends -->

  <!-- Footer -->
  <%-include('includes/footer.ejs')%>
  <!-- Footer  -->
  <script src="/js/headfoot.js"></script>
   <script src="/js/shop.js"></script>
</body>
</html>